  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "ava": "^3.5.1",
    "chalk": "^3.0.0",
    "dedent": "^0.7.0",
    "husky": "^4.2.3",
    "np": "^6.2.0",
    "prettier": "2.0.2",
    "pretty-quick": "^2.0.1",
    "react-feather": "^2.0.3",
    "supertest": "^4.0.2",
    "test-console": "^1.1.0"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/parser": "^7.9.4",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/traverse": "^7.9.0",
    "@mdx-js/mdx": "^1.5.7",
    "@mdx-js/react": "^1.5.7",
    "babel-plugin-react-require": "^3.1.3",
    "browser-sync": "^2.26.7",
    "esm": "^3.2.25",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "lodash.flatmap": "^4.5.0",
    "lodash.uniqby": "^4.7.0",
    "meow": "^6.1.0",
    "pirates": "^4.0.1",
    "postcss": "^7.0.27",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-value-parser": "^4.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "remark-abbr": "^1.4.0",
    "remark-highlight.js": "^6.0.0",
    "rollup": "^2.2.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "semi": false,
    "trailingComma": "all"
