{
  "name": "@static/charge",
  "version": "0.7.0",
  "description": "An opinionated, zero-config static site generator",
  "author": {
    "name": "Brandon Weiss",
    "email": "brandon@anti-pattern.com"
  },
  "bin": "cli.js",
  "engines": {
    "node": ">= 8.10.0"
  },
  "keywords": [
    "jsx",
    "markdown",
    "mdx",
    "react",
    "static",
    "static-site",
    "static-site-generator",
    "website"
  ],
  "license": "MIT",
  "repository": "https://github.com/brandonweiss/charge",
  "scripts": {
    "test": "ava --verbose --serial",
    "test:watch": "yarn run test --watch"
  },
  "devDependencies": {
    "ava": "^1.2.1",
    "dedent": "^0.7.0",
    "husky": "^1.3.1",
    "np": "^4.0.2",
    "prettier": "1.16.4",
    "pretty-quick": "^1.10.0",
    "supertest": "^3.4.2"
  },
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/parser": "^7.3.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/traverse": "^7.2.3",
    "@mdx-js/mdx": "^0.20.1",
    "@mdx-js/tag": "^0.18.0",
    "babel-plugin-react-require": "^3.1.1",
    "browser-sync": "^2.26.3",
    "esm": "^3.2.10",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "lodash.flatmap": "^4.5.0",
    "lodash.uniqby": "^4.7.0",
    "meow": "^5.0.0",
    "object-assign-deep": "^0.4.0",
    "pirates": "^4.0.1",
    "postcss": "^7.0.14",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.6.0",
    "postcss-value-parser": "^3.3.1",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "remark-abbr": "^1.3.0",
    "remark-highlight.js": "^5.1.0",
    "rollup": "^1.4.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "signale": "^1.4.0"
  },
  "ava": {
    "require": [
      "esm"
    ],
    "sources": [
      "!tmp/**/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "semi": false,
    "trailingComma": "all"
  }
}
