{
  "name": "@static/charge",
  "version": "1.5.0",
  "description": "An opinionated, zero-config static site generator",
  "author": {
    "name": "Brandon Weiss",
    "email": "brandon@anti-pattern.com"
  },
  "bin": "cli.js",
  "engines": {
    "node": ">= 8.10.0"
  },
  "keywords": [
    "jsx",
    "markdown",
    "mdx",
    "react",
    "static",
    "static-site",
    "static-site-generator",
    "website"
  ],
  "license": "MIT",
  "repository": "https://github.com/brandonweiss/charge",
  "scripts": {
    "docs": "node cli.js serve docs",
    "test": "ava --verbose --serial",
    "test:watch": "npm test --watch"
  },
  "devDependencies": {
    "@emotion/core": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "ava": "^2.4.0",
    "chalk": "^3.0.0",
    "dedent": "^0.7.0",
    "husky": "^4.0.10",
    "np": "^5.2.1",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "react-feather": "^2.0.3",
    "supertest": "^4.0.2",
    "test-console": "^1.1.0"
  },
  "dependencies": {
    "@babel/core": "^7.8.3",
    "@babel/parser": "^7.8.3",
    "@babel/preset-env": "^7.8.2",
    "@babel/preset-react": "^7.8.3",
    "@babel/traverse": "^7.8.0",
    "@mdx-js/mdx": "^1.5.3",
    "@mdx-js/react": "^1.5.3",
    "babel-plugin-react-require": "^3.1.3",
    "browser-sync": "^2.26.7",
    "esm": "^3.2.25",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "lodash.flatmap": "^4.5.0",
    "lodash.uniqby": "^4.7.0",
    "meow": "^6.0.0",
    "pirates": "^4.0.1",
    "postcss": "^7.0.26",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-value-parser": "^4.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "remark-abbr": "^1.3.2",
    "remark-highlight.js": "^5.2.0",
    "rollup": "^1.29.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "ava": {
    "helpers": [
      "**/helpers/**/*"
    ],
    "require": [
      "esm"
    ],
    "sources": [
      "!tmp/**/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "semi": false,
    "trailingComma": "all"
  }
}
