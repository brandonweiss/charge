{
  "name": "@static/charge",
  "version": "0.2.2",
  "description": "An opinionated, zero-config static site generator",
  "author": {
    "name": "Brandon Weiss",
    "email": "brandon@anti-pattern.com"
  },
  "bin": "cli.js",
  "engines": {
    "node": ">= 9.7.1"
  },
  "keywords": [
    "jsx",
    "markdown",
    "mdx",
    "react",
    "static",
    "static-site",
    "static-site-generator",
    "website"
  ],
  "license": "MIT",
  "repository": "https://github.com/brandonweiss/charge",
  "scripts": {
    "test": "ava --verbose --serial",
    "test:watch": "yarn run test --watch"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "dedent": "^0.7.0",
    "husky": "^1.1.2",
    "np": "^3.0.4",
    "prettier": "1.14.3",
    "pretty-quick": "^1.8.0"
  },
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@babel/parser": "^7.1.3",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/traverse": "^7.1.4",
    "@mdx-js/mdx": "^0.15.5",
    "@mdx-js/tag": "^0.15.0",
    "babel-plugin-react-require": "^3.0.1",
    "browser-sync": "^2.26.3",
    "esm": "^3.0.84",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.3",
    "lodash.flatmap": "^4.5.0",
    "lodash.uniqby": "^4.7.0",
    "meow": "^5.0.0",
    "object-assign-deep": "^0.4.0",
    "pirates": "^4.0.0",
    "postcss": "^7.0.5",
    "postcss-import": "^12.0.0",
    "postcss-preset-env": "^5.3.0",
    "postcss-value-parser": "^3.3.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "signale": "^1.3.0"
  },
  "ava": {
    "require": [
      "esm"
    ],
    "source": [
      "!tmp/**/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "semi": false,
    "trailingComma": "all"
  }
}
